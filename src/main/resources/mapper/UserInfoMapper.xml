<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cmft.demo.mapper.UserInfoMapper">

    <parameterMap id="UserInfoParam" type="com.cmft.demo.entity.UserInfo"/>

    <resultMap id="BaseInfoResultMap" type="com.cmft.demo.entity.BaseInfo">
        <result column="created_name" property="createdName" />
        <result column="created_date" property="createdDate" />
        <result column="updated_name" property="updatedName" />
        <result column="updated_date" property="updatedDate" />
        <result column="is_del" property="del" />
    </resultMap>

    <resultMap id="UserInfoResultMap" type="com.cmft.demo.entity.UserInfo" extends="BaseInfoResultMap">
        <id column="user_id" property="userId" />
        <result column="user_name" property="userName" />
        <result column="age" property="age" />
        <result column="sex" property="sex" />
        <result column="phone" property="phone" />
        <result column="email" property="email" />
        <result column="address" property="address" />
        <result column="status" property="status" />
    </resultMap>

    <sql id="selectSql">
        user_id,
        user_name,
        age,
        sex,
        phone,
        email,
        address,
        status,
        created_name,
        created_date,
        updated_name,
        updated_date,
        is_del
    </sql>

    <insert id="addUserInfo" parameterMap="UserInfoParam">
        insert into user_info (
        user_name,sex,age,address,email,phone
        ) values (
        #{userName},
        #{sex},
        #{age},
        #{address},
        #{email},
        #{phone})
    </insert>

    <update id="updateUserInfo" parameterMap="UserInfoParam">
        update user_info
        set
        <if test="userName != null and userName != ''">
            user_name = #{userName},
        </if>
        <if test="sex != null and sex != ''">
            sex = #{sex},
        </if>
        <if test="age != null">
            age = #{age},
        </if>
        <if test="address != null and address != ''">
            address = #{address},
        </if>
        <if test="email != null and email != ''">
            email = #{email},
        </if>
        <if test="phone != null and phone != ''">
            phone = #{phone},
        </if>
        <if test="updatedName != null and updatedName != ''">
            updated_name = #{updatedName},
        </if>
        updated_date = now()
        where user_id = #{userId}
    </update>

    <update id="deleteUserInfo" parameterType="long">
        update user_info
        set is_del = 'Y',
        updated_date = now()
        where user_id = #{userId}
    </update>

    <select id="queryUserInfoList" parameterMap="UserInfoParam" resultMap="UserInfoResultMap">
        select
        <include refid="selectSql" />
        from user_info
        where 1=1
        <if test="userId != null">
            and user_id = #{userId}
        </if>
        <if test="userName != null and userName != ''">
            and user_name = #{userName}
        </if>
    </select>

    <select id="queryUserInfo" parameterMap="UserInfoParam" resultMap="UserInfoResultMap">
        select
        <include refid="selectSql" />
        from user_info
        where user_id = #{userId}
    </select>

</mapper>